<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/layout.css">
    <title>QR Easy</title>
</head>
<body>

    <h1>QR CODE GENERATOR</h1>

    <!-- Entering text -->
    <div class="form-area">
    <h2 class="title">Enter Text</h2>

    <form action="/" method="POST">
        <!-- <label for="url">Enter Text:</label> -->
        <input type="text" name="txt" id="txt" required />
        <input class="button" type="submit" value="GENERATE" />
    </form>
    </div>

    <!-- Show QR Code -->
     <div class="scan-area">
        <h2 class="scan">Scan Here!</h2>

        <div class="qr-area">
            <% if (locals.foundURL) { %>
                <img class="qr" src= <%= foundURL %> alt="qr-code">
            <% } %>
        </div>
     </div>
</body>
</html>